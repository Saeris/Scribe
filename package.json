{
  "name": "scribe",
  "productName": "Scribe",
  "description": "A GraphQL Magic: The Gathering API Server",
  "author": "Drake Costa <drake@saeris.io> (http://saeris.github.io/)",
  "version": "0.2.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:Saeris/Scribe.git"
  },
  "scripts": {
    "precommit": "lint-staged",
    "start": "npm run start:dev",
    "start:local": "cross-env LOCAL=True nodemon --watch src src/server.js --exec babel-node --color",
    "start:dev": "cross-env NODE_ENV=development serverless offline start --dontPrintOutput",
    "start:prod": "cross-env NODE_ENV=production serverless --stage=production offline start --dontPrintOutput",
    "start:sqlite": "cross-env USE_DB=sqlite npm run start:dev",
    "start:mysql": "cross-env USE_DB=mysql npm run start:dev",
    "deploy": "npm run deploy:dev",
    "deploy:dev": "cross-env NODE_ENV=development serverless --stage=dev deploy",
    "deploy:prod": "cross-env NODE_ENV=production serverless --stage=production deploy",
    "setup": "babel-node setup.js",
    "resetdb": "del-cli database.sqlite && touch database.sqlite && npm run migrate:latest",
    "migrate:latest": "./node_modules/.bin/knex migrate:latest",
    "populate": "babel-node scripts/populate.js --color",
    "test": "cross-env NODE_ENV=test nyc ava --verbose --color --tap",
    "test:watch": "ava --watch",
    "coverage": "cross-env NODE_ENV=test nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "coverage:report": "cross-env NODE_ENV=test nyc report --color",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.1.2",
    "apollo-client": "^2.1.0",
    "apollo-link": "^1.0.5",
    "apollo-link-batch-http": "^1.0.2",
    "apollo-server-hapi": "^1.1.2",
    "aws-lambda": "^0.1.2",
    "babel-polyfill": "7.0.0-beta.3",
    "bell": "^8.9.0",
    "bookshelf": "^0.12.0",
    "bookshelf-modelbase": "^2.10.4",
    "bookshelf-paranoia": "^0.11.0",
    "bookshelf-secure-password": "^3.0.1",
    "dataloader": "^1.3.0",
    "date-fns": "^1.28.5",
    "good": "8.0.0-rc1",
    "good-winston": "^4.0.0",
    "graphql": "^0.12.3",
    "graphql-custom-types": "^1.1.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-iso-date": "^3.3.0",
    "graphql-playground": "^1.3.8",
    "graphql-playground-middleware-hapi": "^1.3.6",
    "graphql-playground-middleware-lambda": "^1.3.6",
    "graphql-query-complexity": "^0.1.1",
    "graphql-relay": "^0.5.2",
    "graphql-tools": "^2.5.0",
    "hapi": "^17.2.0",
    "hapi-auth-jwt2": "^7.3.0",
    "isomorphic-fetch": "^2.2.1",
    "join-monster": "^2.0.15",
    "knex": "^0.14.2",
    "lodash": "^4.17.4",
    "mysql": "^2.12.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "redis": "^2.7.1",
    "sqlite3": "^3.1.13",
    "sqlstring": "^2.3.0",
    "ursa": "^0.9.4",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "aws-sdk": "^2.125.0",
    "babel-cli": "7.0.0-beta.3",
    "babel-core": "7.0.0-beta.3",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-minify-webpack-plugin": "^0.2.0",
    "babel-node": "7.0.0-beta.3",
    "babel-plugin-espower": "^2.3.2",
    "babel-plugin-inline-dotenv": "^1.1.2",
    "babel-plugin-inline-replace-variables": "^1.3.1",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-provide-modules": "^1.0.3",
    "babel-plugin-webpack-alias": "^2.1.2",
    "babel-preset-env": "2.0.0-beta.0",
    "babel-preset-flow": "^7.0.0-beta.3",
    "babel-preset-power-assert": "^1.0.0",
    "babel-preset-stage-0": "^7.0.0-beta.3",
    "babel-register": "7.0.0-beta.3",
    "chalk": "^2.3.0",
    "codecov": "^3.0.0",
    "cross-env": "^5.0.5",
    "del-cli": "^1.1.0",
    "dotenv": "^4.0.0",
    "env-cmd": "^7.0.0",
    "eslint": "^4.8.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-ava": "^4.2.2",
    "eslint-plugin-compat": "^2.0.1",
    "eslint-plugin-flowtype": "^2.37.0",
    "eslint-plugin-graphql": "^1.4.0-1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.4.0",
    "flow": "^0.2.3",
    "flow-bin": "^0.62.0",
    "graphql-tag": "^2.5.0",
    "lint-staged": "^6.0.0",
    "lodash-webpack-plugin": "^0.11.4",
    "nodemon": "^1.14.6",
    "nyc": "^11.2.1",
    "power-assert": "^1.4.4",
    "present": "^1.0.0",
    "prettier": "^1.7.0",
    "serverless-domain-manager": "^2.0.2",
    "serverless-offline": "^3.15.3",
    "serverless-webpack": "^4.0.0",
    "snyk": "^1.42.6",
    "tap-nyan": "^1.1.0",
    "webpack": "^3.6.0",
    "webpack-node-externals": "^1.6.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "snyk": true,
  "ava": {
    "files": [
      "!src/**/*.js",
      "!**/webpack.config.js",
      "src/**/__TEST__/*.spec.js"
    ],
    "source": [
      "src/**/*.{js,jsx}",
      "!dist/**/*"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": "tap-nyan",
    "powerAssert": true,
    "require": [
      "babel-register",
      "babel-polyfill",
      "isomorphic-fetch"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "cache": true,
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "src/**/__TEST__/*.spec.js",
      "build",
      "dist"
    ]
  }
}
